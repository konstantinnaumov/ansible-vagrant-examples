
pipeline {
    agent any
    stages {
        stage('Test') {
            steps {
                sh 'chmod 777 ./test-script.sh'
                sh './test-script.sh'
                sh 'cat ./test-reports/test_script.log'
                echo "Test stage gets finished here"
            }
        }
        stage('Deploy'){
            steps {
                sh 'echo DEPLOYING...
                sh 'vagrant up'
                sh 'vagrant provision'
                sh 'echo DEPLOY STAGE OK'
            }
        }
        stage('Backup'){
            steps {
                sh 'cd /var/www/html'
                sh '/vagrant/command/db_backup.sh'
                sh 'echo Backup STAGE OK'
            }
        }
    }
}
